    "url": "git+https://github.com/ovidiucota/github-battle.git"
  },
  "babel": {
    "presets": [
      "env",
      "react"
    ]
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ovidiucota/github-battle/issues"
  },
  "homepage": "https://github.com/ovidiucota/github-battle#readme",
