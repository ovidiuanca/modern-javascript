{
  "name": "github-battle",
  "version": "1.0.0",
  "description": "Compact React app using webpack, npm and babel.",
  "main": "index.js",
  "scripts": {
    "start": "webpack-dev-server --open",
    "share": "webpack-dev-server --port 3000 --hot --host 0.0.0.0",
